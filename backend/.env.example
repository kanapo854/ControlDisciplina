# Configuración del servidor
NODE_ENV=development
PORT=5000

# Puerto HTTP para redirección a HTTPS (solo en producción)
HTTP_PORT=80

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=control_disciplina
DB_USER=postgres
DB_PASSWORD=password

# JWT Secret (IMPORTANTE: cambiar en producción - mínimo 32 caracteres aleatorios)
# NUNCA usar el valor de ejemplo en producción
JWT_SECRET=CAMBIAR_ESTO_POR_SECRET_SEGURO_MINIMO_32_CARACTERES_ALEATORIOS
JWT_EXPIRE=7d

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Certificados SSL (solo para producción con HTTPS)
# Descomentar y configurar en producción
# SSL_KEY_PATH=/etc/letsencrypt/live/tudominio.com/privkey.pem
# SSL_CERT_PATH=/etc/letsencrypt/live/tudominio.com/fullchain.pem
# SSL_CA_PATH=/etc/letsencrypt/live/tudominio.com/chain.pem

# ==============================================
# SEGURIDAD - EMAIL PARA MFA Y NOTIFICACIONES
# ==============================================
# ⚠️ REQUERIDO para funcionalidad MFA/2FA y expiración de contraseñas
# Para Gmail: crear contraseña de aplicación en https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password-16-chars
EMAIL_FROM_NAME=Control Disciplina

# Alternativa: Outlook/Hotmail
# EMAIL_HOST=smtp.office365.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@outlook.com
# EMAIL_PASSWORD=your-password

# Alternativa: SendGrid (Recomendado para producción)
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=apikey
# EMAIL_PASSWORD=SG.your-sendgrid-api-key